# Copy this file to .env and fill the values
FLASK_ENV=production
SECRET_KEY=change-me-super-secret
DATABASE_URL=postgresql+psycopg2://sprintero:sprintero@db:5432/sprintero

# Admin credentials for the Settings page
ADMIN_USERNAME=admin
ADMIN_PASSWORD=adminpass

# Binance base URL (public endpoints don't require keys)
BINANCE_BASE_URL=https://api.binance.com

# Scheduler refresh in seconds
REFRESH_SECONDS=60

# Rate limiter storage (use Redis in production)
LIMITER_STORAGE_URL=redis://redis:6379
